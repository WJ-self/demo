{
    "name": "reconstruction",
    "n_gpu": 1,
    "arch": {
        "type": "ediff",
        "args": {
            "steps": 2000,
            "sample_steps": 100,
            "unet_kwargs": {
                "num_bins":5,
                "out_channel": 1,
                "inner_channel": 32,
                "norm_groups": 32,
                "channel_mults": [1, 2, 4, 8, 8],
                "attn_res": [8],
                "res_blocks": 3,
                "dropout": 0,
                "with_noise_level_emb": true,
                "image_size": 128
            }
        }
    },
    "data_loader": {
        "type": "HDF5DataLoader",
        "args": {
            "data_file": "/root/autodl-tmp/data_eventcnn/ECD_H5/traindata_file.txt",
            "batch_size": 2,
            "shuffle": true,
            "num_workers": 0,
            "pin_memory": true,
            "sequence_kwargs": {
                "sequence_length": 40,
                "dataset_type": "DynamicH5Dataset",
                "proba_pause_when_running": 0.05,
                "proba_pause_when_paused": 0.9,
                "normalize_image": false,
                "noise_kwargs": {
                    "noise_std":0.1,
                    "noise_fraction": 1.0
                },
                "hot_pixel_kwargs": {
                    "hot_pixel_std": 0.1,
                    "max_hot_pixel_fraction": 0.001
                },
                "dataset_kwargs": {
                    "transforms": {
                        "RandomCrop": {
                            "size": 112
                        },
                        "RandomFlip": {}
                    },
                    "num_bins": 5
                }
            }
        }
    },
    "valid_data_loader": {
        "type": "HDF5DataLoader",
        "args": {
            "data_file": "/root/autodl-tmp/data_eventcnn/ECD_H5/data_file.txt",
            "batch_size": 1,
            "shuffle": false,
            "num_workers": 0,
            "pin_memory": true,
            "sequence_kwargs": {
                "sequence_length": 320,
                "dataset_type": "DynamicH5Dataset",
                "normalize_image": true,
                "dataset_kwargs": {
                    "max_length": 320,
                    "transforms": {
                        "CenterCrop": {
                            "size": 160
                        }
                    },
                    "num_bins": 5
                }
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 1.0
        }
    },
    "trainer": {
        "epochs": 200,
        "save_dir": "/root/autodl-tmp/save_eventcnn/path",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min loss",
        "num_previews": 4,
        "val_num_previews": 8,
        "tensorboard": true
    }
}
